<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".AgregarActividad2"
    android:screenOrientation="portrait">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:gravity="center|top"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:contentDescription="@string/volver"
                android:onClick="volver"
                app:srcCompat="@drawable/atras" />
            
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView23"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/blackline" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="openDate"
                        app:srcCompat="@drawable/calendario" />

                    <Button
                        android:id="@+id/fecha"
                        android:layout_width="320dp"
                        android:layout_height="80dp"
                        android:backgroundTint="#3F51B5"
                        android:onClick="openDate"
                        android:text="Elegir fecha"
                        android:textColor="#FFFFFF"
                        android:textSize="36sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView21"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/blackline" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView12"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="openTime"
                        app:srcCompat="@drawable/hora"
                        tools:layout_editor_absoluteX="173dp"
                        tools:layout_editor_absoluteY="640dp" />

                    <Button
                        android:id="@+id/hora"
                        android:layout_width="320dp"
                        android:layout_height="80dp"
                        android:onClick="openTime"
                        android:text="Hora"
                        android:textColor="#FFFFFF"
                        android:textSize="36sp"
                        android:backgroundTint="#3F51B5"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView20"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/blackline" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView14"
                        android:layout_width="62dp"
                        android:layout_height="match_parent"
                        android:onClick="openTime"
                        app:srcCompat="@drawable/dinero"
                        tools:layout_editor_absoluteX="173dp"
                        tools:layout_editor_absoluteY="640dp" />

                    <EditText
                        android:id="@+id/precio"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#ffffff"
                        android:ems="10"
                        android:hint="Precio..."
                        android:inputType="number"
                        android:textAlignment="center"
                        android:textSize="24sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView17"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    app:srcCompat="@drawable/blackline" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:layout_weight="1"
                    android:text="PLAZAS"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="24sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="9dp"
                            android:layout_weight="1"
                            android:text="Socios"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="88dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView28"
                                android:layout_width="56dp"
                                android:layout_height="52dp"
                                android:layout_weight="1"
                                android:onClick="menos_s"
                                app:srcCompat="@drawable/menos" />

                            <EditText
                                android:id="@+id/edit_socios"
                                android:layout_width="72dp"
                                android:layout_height="55dp"
                                android:layout_weight="1"
                                android:background="#FFFFFF"
                                android:ems="10"
                                android:inputType="number"
                                android:text="1"
                                android:textAlignment="center"
                                android:textSize="30sp" />

                            <ImageView
                                android:id="@+id/imageView27"
                                android:layout_width="58dp"
                                android:layout_height="53dp"
                                android:layout_weight="1"
                                android:onClick="mas_s"
                                app:srcCompat="@drawable/mas" />
                        </LinearLayout>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imageView24"
                        android:layout_width="217dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/blackline_vertical" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="match_parent"
                            android:layout_height="9dp"
                            android:layout_weight="1"
                            android:text="Voluntarios"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="88dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView25"
                                android:layout_width="56dp"
                                android:layout_height="52dp"
                                android:layout_weight="1"
                                android:onClick="menos_v"
                                app:srcCompat="@drawable/menos" />

                            <EditText
                                android:id="@+id/edit_voluntarios"
                                android:layout_width="72dp"
                                android:layout_height="55dp"
                                android:layout_weight="1"
                                android:background="#FFFFFF"
                                android:ems="10"
                                android:inputType="number"
                                android:text="1"
                                android:textAlignment="center"
                                android:textSize="30sp" />

                            <ImageView
                                android:id="@+id/imageView26"
                                android:layout_width="58dp"
                                android:layout_height="53dp"
                                android:layout_weight="1"
                                android:onClick="mas_v"
                                app:srcCompat="@drawable/mas" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="match_parent"
                    android:layout_height="23dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/blackline" />

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="¿Requiere autorización?"
                    android:textAlignment="center"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:backgroundTint="#3F51B5"
                    android:onClick="enviar"
                    android:text="Enviar"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="14pt" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>